        <script>
            $(document).ready(function() {
                $('.main-wrapper').css('height', $('.docs-content').outerHeight());
                $(document).on('click', 'a[href^="#"]', function (event) {
                    event.preventDefault();
                    $('html, body').animate({
                        scrollTop: $($.attr(this, 'href')).offset().top - 55
                    }, 500);
                });

                followScroll();

                function followScroll() {
                    $('.docs-section').each((i, elem) => {
                    let anchor_offset_top = $(elem).offset().top - 60;
                    let anchor_offset_bottom = anchor_offset_top + $(elem).outerHeight();
                    if ($(window).scrollTop() > anchor_offset_top && $(window).scrollTop() < anchor_offset_bottom) { $('ol.sub-cap li a').removeClass('active'); $(`ol.sub-cap li a[href="#${$(elem).attr('id')}" ]`).addClass('active'); console.log($(elem).attr('id')); } });
                    $(window).on('scroll', function () {
                        $('.docs-section').each((i, elem) => {
                            let anchor_offset_top = $(elem).offset().top - 60;
                            let anchor_offset_bottom = anchor_offset_top + $(elem).outerHeight();
                            if ($(window).scrollTop() >= anchor_offset_top && $(window).scrollTop() < anchor_offset_bottom) {
                                $('ol.sub-cap li a').removeClass('active');
                                $(`ol.sub-cap li a[href="#${$(elem).attr('id')}"]`).addClass('active');
                            }
                        });
                    });
                }
            });
        </script>
