<section class="hero">

    <div class="form-container">
        <div class="row">
            <div class="container">

                <div class="row">
                    <div class="container">
                        <div class="typed-center-wrapper">
                            <h1 class="title-typed-center" id="typed"></h1>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="container">
                        <form class="url-input">
                            <div class="row">
                                <div class="container">
                                    <div class="url-input-container">

                                        <div class="row">
                                            <div class="container">
                                                <div class="input-url-wrapper">
                                                    <div class="input-url">
                                                        <i class="far fa-link"></i>
                                                        <input type="text" class="long-url-input" id="long-url-input" name="longUrlInput" placeholder="Paste a long URL..." />
                                                    </div>
                                                    <div class="button-url">
                                                        <button type="button" id="shortenUrl" class="butt main-button blue-button">Let's Go!</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="container">
                                    <button type="button" class="custom-button-advanced"><i class="fal fa-cog"></i> Advanced options</button>
                                    <div class="row advanced-option-wrapper">
                                        <div class="container">
                                            <div class="col-equal-input">
                                                <div class="input">
                                                    <label for="alias">
                                                        <b>Custom Alias</b>
                                                        <p>If you need a custom alias, you can enter it below.</p>
                                                    </label>
                                                    <input type="text" name="alias" id="alias" placeholder="Custom Alias..." />
                                                </div>
                                            </div>
                                            <div class="col-equal-input">
                                                <div class="input">
                                                    <label for="expire">
                                                        <b>Link Expiration</b>
                                                        <p>Set an expiration date to disable the URL after this date.</p>
                                                    </label>
                                                    <input type="date" name="expire" id="expire" placeholder="Link Expiration..." />
                                                </div>
                                            </div>
                                            <div class="col-equal-input">
                                                <div class="input">
                                                    <label for="password">
                                                        <label for="password">
                                                            <b>Password Protect</b>
                                                            <p>By adding a password, you can restrict the access.</p>
                                                        </label>
                                                    </label>
                                                    <input type="text" name="password" id="password" placeholder="Password Protect..." />
                                                </div>
                                            </div>
                                            <div class="col-equal-input">
                                                <div class="input last-child">
                                                    <label for="description">
                                                        <b>Description</b>
                                                        <p>This can be used to identify URLs on your account.</p>
                                                    </label>
                                                    <input type="text" name="description" id="description" placeholder="Description..." />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

